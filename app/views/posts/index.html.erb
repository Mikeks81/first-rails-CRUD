<h1>Make a Post!</h1>


<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :body %>
	<%= f.text_field :body %>
	<%= f.submit :create %>
<% end %>

<h1>Posts!</h1>

<% @posts.each do |post| %>
	<h4><%= post.title %></h4>
	<p><%= post.body %></p>
	<%= link_to "View", post_path(post) %>
	<%= link_to "Edit", edit_post_path(post) %>
	<%= link_to "Delete", post, method: :delete %>
<% end %>
